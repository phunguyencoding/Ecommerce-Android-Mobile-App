    <EditText
        android:id="@+id/search_field"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/heading_label"
        android:layout_alignStart="@+id/heading_label"
        android:layout_marginStart="28dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/input_desgin1"
        android:ems="14"
        android:fontFamily="@font/nunito_semibold"
        android:hint="Bitis Hunter"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:textColor="#999999"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heading_label" />

    <ImageButton
        android:id="@+id/button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/search_field"
        android:layout_alignBottom="@+id/search_field"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="1dp"
        android:layout_toEndOf="@+id/search_field"
        android:background="@drawable/ic_search_product"
        app:layout_constraintBottom_toBottomOf="@+id/search_field"
        app:layout_constraintStart_toEndOf="@+id/search_field"
        app:layout_constraintTop_toTopOf="@+id/search_field"
        app:layout_constraintVertical_bias="0.666" />

